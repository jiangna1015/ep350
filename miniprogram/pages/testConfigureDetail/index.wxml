<!--pages/testConfigureDetail/index.wxml-->
<van-divider contentPosition="left">{{ _t['信息'] }}</van-divider>
<van-toast id="van-toast" />
<van-notify id="van-notify" />
<van-cell-group>
  <van-cell title="{{ _t['名称'] }}" value="{{serviceChoiceList.length}} service" />
</van-cell-group>
<van-row>
  <van-col span="6" offset="10" >
    <view class="number">
      {{ _t['最小值'] }}
    </view>
  </van-col>
  <van-col span="6" offset="2">
    <view class="number">
      {{ _t['最大值'] }}
    </view>
  </van-col>
</van-row>
<van-cell-group wx:for="{{serviceChoiceList}}" wx:key="i">
  <van-divider contentPosition="left">{{serviceName[serviceChoiceList[index]]}}</van-divider>
    <van-row>
      <van-col span="10">
        <view class="title">
          {{ _t['上行功率'] }}（dBm）
        </view>
      </van-col>
      <van-col span="6" >
        <van-field  data-type="{{index}}" data-name="1"  value="{{servicesData['Service' + index][1]}}"   placeholder="" border="{{ false }}" bind:blur="bindInput" />
        <!-- <input  data-type="{{index}}" data-name="1" value="{{servicesData['Service' + index][1]}}" bindinput="bindInput"/> -->
      </van-col>
      <van-col span="6" offset="2">
        <van-field  data-type="{{index}}" data-name="0"  value="{{servicesData['Service' + index][0]}}"   placeholder="" border="{{ false }}" bind:blur="bindInput" />
        <!-- <input data-type="{{index}}" data-name="0" value="{{servicesData['Service' + index][0]}}" bindinput="bindInput"/> -->
      </van-col>
    </van-row>
    <van-row>
      <van-col span="10">
        <view class="title">
          {{ _t['下行功率'] }}（dBm）
        </view>
      </van-col>
      <van-col span="6" >
        <van-field  data-type="{{index}}" data-name="3"  value="{{servicesData['Service' + index][3]}}"   placeholder="" border="{{ false }}" bind:blur="bindInput" />
        <!-- <input  data-type="{{index}}" data-name="1" value="{{servicesData['Service' + index][1]}}" bindinput="bindInput"/> -->
      </van-col>
      <van-col span="6" offset="2">
        <van-field  data-type="{{index}}" data-name="2"  value="{{servicesData['Service' + index][2]}}"   placeholder="" border="{{ false }}" bind:blur="bindInput" />
        <!-- <input data-type="{{index}}" data-name="0" value="{{servicesData['Service' + index][0]}}" bindinput="bindInput"/> -->
      </van-col>
    </van-row>
  <!-- <van-cell title="{{ _t['下行功率'] }}（dBm）">
    <view sort="value">
      <van-row>
        <van-col span="12">
          <input  data-type="{{index}}" data-name="3" value="{{servicesData['Service' + index][3]}}" bindinput="bindInput"/>
        </van-col>
        <van-col span="12">
          <input  data-type="{{index}}" data-name="2" value="{{servicesData['Service' + index][2]}}" bindinput="bindInput"/>
        </van-col>
      </van-row>
    </view>
  </van-cell> -->
</van-cell-group>
<van-button type="primary" block bindtap="setVal">{{ _t['修改阈值'] }}</van-button>

<!--pages/configure/index.wxml-->
<h2>{{ _t['标识'] }}</h2>
<van-cell-group>
  <van-cell-group>
  <van-field data-id="task" maxlength='10'  value="{{task}}" label="{{ _t['任务标识'] }}" placeholder="{{ _t['请输入'] }}" bind:change="onChange" />
  <van-field data-id="operator" maxlength='10' value="{{operator}}"  label="{{ _t['操作员'] }}" placeholder="{{ _t['请输入'] }}" bind:change="onChange" />
  <van-field data-id="customer"  maxlength='10' value="{{customer}}"  label="{{ _t['客户'] }}" placeholder="{{ _t['请输入'] }}" bind:change="onChange" />
  <van-field data-id="company" maxlength='10'  value="{{company}}"  label="{{ _t['公司'] }}" placeholder="{{ _t['请输入'] }}" bind:change="onChange" />
  <van-field data-id="position" maxlength='10'  value="{{position}}"  label="{{ _t['位置'] }}" placeholder="{{ _t['请输入'] }}" bind:change="onChange" />
  <van-field data-id="optical" maxlength='10'  value="{{optical}}"  label="{{ _t['光纤标识'] }}" placeholder="{{ _t['请输入'] }}" bind:change="onChange" /> 
  <van-field data-id="connector" maxlength='10' value="{{connector}}"  label="{{ _t['连接器标识'] }}" placeholder="{{ _t['请输入'] }}" bind:change="onChange" />
  <van-field
  data-id="message"
  value="{{ message }}"
  rows="2"
  autosize
  label="{{ _t['注释'] }}"
  type="textarea"
  maxlength="50"
  placeholder="{{ _t['请输入'] }}"
  bind:change="onChange"
  show-word-limit
/>
</van-cell-group>
</van-cell-group>
